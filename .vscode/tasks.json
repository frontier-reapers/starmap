      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "data/build_data.py",
        "--db",
        "data/static.db",
        "--out",
        "public/data"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "build"
      }
    },
